<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="#EEFDFF"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:weightSum="0"
    tools:context=".MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <!--Display whether bluetooth is available or not-->
            <TextView
                android:id="@+id/statusBluetoothTv"
                android:layout_width="245dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <!--Bluetooth icon (on/off)-->
            <ImageView
                android:id="@+id/bluetoothIv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="right" />

        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#EEFDFF"
        android:orientation="horizontal"
        android:padding="0dp">

        <!--On button-->
        <Button
            android:id="@+id/onBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#431F63"
            android:minWidth="135dp"
            android:text="Encender"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <!--Off button-->
        <Button
            android:id="@+id/offBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#CC1F16"
            android:minWidth="135dp"
            android:text="Apagar"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <!--Discoverable button-->
        <Button
            android:id="@+id/discoverableBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#431F63"
            android:minWidth="135dp"
            android:text="Buscar"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:background="#EEFDFF"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <!--Listar dispositivos-->
        <Button
            android:id="@+id/pairedBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#1C5169"
            android:minWidth="150dp"
            android:text="Dispositivos"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!--listar logs-->
        <Button
            android:id="@+id/verLogsBtn"
            android:layout_margin="16dp"
            android:background="#F59908"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:minWidth="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>

        <!--Bloquear algÃºn dispositivo-->
        <Button
            android:id="@+id/blockBtn"
            android:layout_margin="16dp"
            android:background="#CC1F16"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:minWidth="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bloquear dispositivo"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>

        <!--gatt Server-->
        <Button
            android:id="@+id/gattBtn"
            android:layout_margin="16dp"
            android:background="#76CAD1"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:minWidth="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gatt Server"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>

        <!--Show Paired Devices Here-->

        <TextView
            android:id="@+id/pairedTv"
            android:minWidth="200dp"
            android:minHeight="200dp"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"/>

    </LinearLayout>

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_margin="16dp"
        android:background="#EEFDFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/pairedTv"
            android:minWidth="200dp"
            android:minHeight="200dp"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"/>
    </LinearLayout-->

</LinearLayout>